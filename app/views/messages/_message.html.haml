.chat-main__message-content
  .chat-main__message-name
    = message.user.name
    .chat-main__message-name--date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__message
    - if message.content.present?
      %p.chat-main__message--content
        = message.content
    = image_tag message.image.url, class: 'chat-main__message--image' if message.image.present?